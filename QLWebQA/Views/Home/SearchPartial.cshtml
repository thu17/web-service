<style type="text/css">
    .inline {
        display: inline;
    }

    .search-div {
        width: 100%;
        height: 38px;
        margin-left: 50px;
        padding: 10px 20px;
    }

        .search-div select {
            width: 200px;
            height: 100%;
            border-color: lightgray;
            padding: 10px;
        }

        .search-div button {
            width: 60px;
            height: 100%;
            line-height: 100%;
            vertical-align: central;
            background-color: darkturquoise;
            border-color: darkturquoise;
            border: none;
        }
</style>
<div class="search-div" id="search-bar-area">
    <div class="inline" style="padding-right:50px;line-height:30px;font-size:large">
        Search
    </div>
    <div class="inline">
        <select id="nhomhang" data-bind="options:NhomHangs,
                                        optionsText: 'namenhomhang',
                                        optionsValue: 'idnhomhang',
                                        optionsCaption: 'Groups',event:{'change' : BindingThuongHieu}"></select>
    </div>
    <div class="inline">
        <select id="thuonghieu" data-bind="options:ThuongHieus,
                                        optionsText: 'namethuonghieu',
                                        optionsValue: 'idthuonghieu',
                                        optionsCaption: 'Brand',event:{'change':GetThuongHieuValue}"></select>
    </div>
    <div class="inline">
        <select id="mausac" data-bind=" options:MauSacs,
                                        optionsText: 'namemausac',
                                        optionsValue: 'idmausac',
                                        optionsCaption: 'Color',event:{'change' :GetMauSacValue}">
            Mau Sac
        </select>
    </div>
    <div class="inline">
        <select id="kieudang" data-bind=" options:KieuDangs,
                                        optionsText: 'namekieudang',
                                        optionsValue: 'idkieudang',
                                        optionsCaption: 'Feature',event:{'change' :GetKieuDangValue}"></select>
            @*<input id="kieudang" style="width:300px;height:33px;border-style:solid;border-width:1.1px;border-color:lightgray" placeholder="Type feature ..." />*@
    </div>
    <div class="inline">
        <a data-bind="attr:{'href' : '/Home/Search?idthuonghieu=' + thvalue() + '&idmausac=' + msvalue() + '&kieudang=' + kdvalue()}"><button>Search</button></a>
    </div>
</div>
<script src="~/Scripts/knockout-3.4.2.js"></script>
<script src="~/Scripts/SearchOptions.js"></script>